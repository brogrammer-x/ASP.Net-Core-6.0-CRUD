@model IEnumerable<CRUD_Website.Models.Person>

<partial name="_ToasterNotifications" />

<h3 class="mt-3">People</h3>

<hr /> 
<p>
    <div class="d-flex justify-content-end">
        <a asp-action="Create">
            <button type="button" class="btn btn-outline-primary mt-3">
                <i class="bi bi-plus"></i>&nbsp;Add Person
            </button>
        </a>
    </div>
</p>
<table class="table table-hover">
    <thead>
        <tr class="table-info">
            <th width="50%">
              @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
              @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
              @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th width="15%"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-secondary">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">
                        <button type="button" class="btn btn-info"><i class="bi bi-pencil"></i>&nbsp;Edit</button>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id">
                        <button type="button" class="btn btn-danger"><i class="bi bi-trash"></i>&nbsp;Delete</button>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>